{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es2016",
      "dom"
    ],
    "noImplicitAny": true,
    "declaration": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "allowJs": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "rootDir": "src",
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*.ts",
    "bower_components/polymer/types/polymer.d.ts",
    "bower_components/polymer/types/polymer-element.d.ts",
    "bower_components/polymer-decorators/polymer-decorators.d.ts"
  ]
}